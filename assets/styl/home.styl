body
  font-family Lato
  
h1, h2, h3, h4
  font-family Lobster
  
  .btn
    font-family Lato
    
.jumbotron
  min-height 100vh
  margin-bottom 0
  background linear-gradient(#eee, lighten(skyblue, 80%))
  
#info-row p
  font-size 1.8rem
  
.input-group-addon
  border-radius 0
  background white
  border 1px solid transparent
  border-bottom-color #ccc

.form-control
  border-radius 0
  border 1px solid transparent
  border-bottom-color #ccc
  box-shadow none
  
  // Keep everything the same on focus
  &:focus
    box-shadow none
    border-color transparent
    border-bottom-color #ccc
    
.btn:not(.btn-xs)
  border-radius 9999px
  padding 12px 25px