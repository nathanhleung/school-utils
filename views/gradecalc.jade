    script(src='/js/gradecalc.js')
    script.
      // We start out with only the theme CSS present
      var theme = true;
      function toggleTheme() {
        if (theme) {
          $('head').append('<link rel="stylesheet" href="/css/gradecalc.css">');
          $("link[href='/css/gradecalc-theme.css']")[0].remove();
        } else {
          $('head').append('<link rel="stylesheet" href="/css/gradecalc-theme.css">');
          $("link[href='/css/gradecalc.css']")[0].remove();
        }
        theme = !theme;
      }
      $('#toggleTheme').click(toggleTheme);
      toggleTheme(); // initialize page with old theme as default
